{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/sdk-core/esm",
    "declaration": true,
    "declarationDir": "../../dist/sdk-core/esm/types",
    "types": [],
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
